<div class="row justify-content-center">
  <div class="col-lg-7">
    <div class="card shadow-lg border-0 rounded-lg mt-5">
      <div class="card-header"><h3 class="text-center font-weight-light my-4">Criar Conta</h3></div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :first_name, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control py-4", placeholder: "Primeiro nome" }, label_html: { class: "small mb-1" }%>
              </div>
            </div>
            <div class="col-md-6">
              <%= f.input :last_name, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control py-4", placeholder: "Ãšltimo nome" }, label_html: { class: "small mb-1" }%>
            </div>
          </div>
          <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-control py-4", placeholder: "Email" }, label_html: { class: "small mb-1" }%>
          <div class="form-row">
            <div class="col-md-6">
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control py-4", autocomplete: "new-password" }, label_html: { class: "small mb-1" } %>
            </div>
            <div class="col-md-6">
              <%= f.input :password_confirmation, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "form-control py-4", autocomplete: "new-password" }, label_html: { class: "small mb-1" } %>
            </div>
          </div>
          <div class="form-group mt-4 mb-0">
            <%= f.button :submit, "Criar Conta", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <div class="small">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
