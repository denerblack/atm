  <div class="card-body">
    <%= simple_form_for(@account) do |f| %>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">NÃºmero</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= @account.number %>">
      </div>
    </div>
